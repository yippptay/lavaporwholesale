{{ 'section-featured-blog.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign posts_displayed = section.settings.blog.articles_count
-%}
<div class="blog leftpro">
    <h2 class="heading text-left"><span>{{ section.settings.m_title }}</span></h2>
    <div class="">
        <div class="rless">
            <div class="wbblog">
                {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}
                    {%- for article in section.settings.blog.articles -%}
                        <div class="col-12 cless">
                            {% render 'article-card', blog: section.settings.blog, image_height: section.settings.image_height, article: article, show_image: section.settings.show_image, show_date: section.settings.show_date, show_author: section.settings.show_author, show_cmment: section.settings.show_cmment,show_desc: section.settings.show_desc,
                            show_view_all: section.settings.show_view_all %}
                        </div>
                    {%- endfor -%}

                    

                {%- else -%}
                    {% for i in (1..3) %}
                        <div class="col-12 cless">
                            <article class="article-card">
                                <div class="wbblogimg">
                                    <img src="https://dummyimage.com/1000x625/f5f5f5" class="img-fluid mx-auto" />
                                </div>
                                <div class="wbblogimgdesc">
                                    <h2><a href="#">Curabitur iaculis sem non lacus dapibus aliquam Maecenas {{ i }}</a></h2>
                                    <div class="wbblogdate">Oct 22, 2022</div>
                                </div>
                            </article>
                        </div>
                    {% endfor %}
                {%- endif -%}
            </div>
        </div>
    </div>
</div>
{% schema %}
{
  "name": "t:sections.featured-blog.name",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {  
      "type": "text",
      "id": "m_title",
      "label": "Heading",
      "default": "latest blog"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "t:sections.featured-blog.settings.blog.label"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_image.label"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.featured-collection.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.featured-collection.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.featured-collection.settings.image_ratio.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.featured-collection.settings.image_ratio.label"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_date.label"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "t:sections.featured-blog.settings.show_author.label"
    },
    {
      "type": "checkbox",
      "id": "show_desc",
      "default": false,
      "label": "Show Description"
    },
    {
      "type": "checkbox",
      "id": "show_cmment",
      "default": false,
      "label": "Show Comments"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show View All Button"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-blog.presets.name",
      "settings": {
        "blog": "News"
      }
    }
  ]
}
{% endschema %}
