<script>
    function toggleModal() {
        $('#exampleModal').modal('toggle')
    }
</script>

<div class="deliveryinfo">
        <div class="row rless">
            {% if section.settings.s_title %}
                <div class="col-12 col-sm-3 col-md-3 cless">
                    <ul style="display: flex; flex-direction: row; padding: 12px 0; justify-content: space-evenly; align-items: center;">
                        <li>
                            <span>
                               {% render 'icon-allservice', icon: section.settings.icon1 %}
                               {% if section.settings.checkiconimage1 %}
                                     {% if section.settings.iconimage1 != blank %}
                                        <img src="{{ section.settings.iconimage1 | img_url: 'master' }}" alt="{{ section.settings.iconimage1.alt }}" class="img-fluid mx-auto" width="40" height="40"/>
                                        <!-- Original: <img src="{{ section.settings.iconimage1 | img_url: 'master' }}" alt="{{ section.settings.iconimage1.alt }}" class="img-fluid mx-auto" width="{{ section.settings.iconimage1.width }}" height="{{ section.settings.iconimage1.height }}"/> -->
                                    {% endif %}
                                {% endif %}
                            </span>
                        </li>
                        <li>
                            <h2>{{ section.settings.header_gift }}</h2>
                            <p>{{ section.settings.header_gift1 }}</p>
                        </li>
                    </ul>
                </div>
            {% endif %}
            {% if section.settings.sa_title %}
                <div class="col-12 col-sm-3 col-md-3 cless">
                    <ul style="display: flex; flex-direction: row; padding: 12px 0; justify-content: space-evenly; align-items: center;">
                        <li>
                            <span>
                               {% render 'icon-allservice', icon: section.settings.icon2 %}
                               {% if section.settings.checkiconimage2 %}
                                     {% if section.settings.iconimage2 != blank %}
                                        <img src="{{ section.settings.iconimage2 | img_url: 'master' }}" alt="{{ section.settings.iconimage2.alt }}" class="img-fluid mx-auto" width="40" height="40"/>
                                        <!-- Original: <img src="{{ section.settings.iconimage2 | img_url: 'master' }}" alt="{{ section.settings.iconimage2.alt }}" class="img-fluid mx-auto" width="{{ section.settings.iconimage2.width }}" height="{{ section.settings.iconimage2.height }}"/> -->
                                    {% endif %}
                                {% endif %}
                           </span>
                       </li>
                        <li>
                            <h2>{{ section.settings.header_pay }}</h2>
                            <p>{{ section.settings.header_pay1 }}</p>
                        </li>
                    </ul>
                </div>
            {% endif %}
            {% if section.settings.sb_title %}
                <div class="col-12 col-sm-3 col-md-3 cless">
                    <ul style="display: flex; flex-direction: row; padding: 12px 0; justify-content: space-evenly; align-items: center;">
                        <li>
                            <span>
                                {% render 'icon-allservice', icon: section.settings.icon3 %}
                                {% if section.settings.checkiconimage3 %}
                                     {% if section.settings.iconimage3 != blank %}
                                        <img src="{{ section.settings.iconimage3 | img_url: 'master' }}" alt="{{ section.settings.iconimage3.alt }}" class="img-fluid mx-auto" width="40" height="40"/>
                                        <!-- Original: <img src="{{ section.settings.iconimage3 | img_url: 'master' }}" alt="{{ section.settings.iconimage3.alt }}" class="img-fluid mx-auto" width="{{ section.settings.iconimage3.width }}" height="{{ section.settings.iconimage3.height }}"/> -->
                                    {% endif %}
                                {% endif %}
                            </span>
                        </li>
                        <li>
                            <h2>{{ section.settings.header_support }}</h2>
                            <p>{{ section.settings.header_support1 }}</p>
                        </li>
                    </ul>
                </div>
            {% endif %}
            {% if section.settings.sc_title %}
                <div class="col-12 col-sm-3 col-md-3 cless" style="cursor: pointer" onclick="toggleModal();">
                    <ul style="display: flex; flex-direction: row; padding: 12px 0; justify-content: space-evenly; align-items: center;">
                        <li>
                            <span>
                                {% render 'icon-allservice', icon: section.settings.icon4 %}
                                {% if section.settings.checkiconimage4 %}
                                     {% if section.settings.iconimage4 != blank %}
                                        <img src="{{ section.settings.iconimage4 | img_url: 'master' }}" alt="{{ section.settings.iconimage4.alt }}" class="img-fluid mx-auto" width="40" height="40"/>
                                        <!-- Original: <img src="{{ section.settings.iconimage4 | img_url: 'master' }}" alt="{{ section.settings.iconimage4.alt }}" class="img-fluid mx-auto" width="{{ section.settings.iconimage4.width }}" height="{{ section.settings.iconimage4.height }}"/> -->
                                    {% endif %}
                                {% endif %}
                            </span>
                        </li>
                        <li>
                            <h2>{{ section.settings.header_ship }}</h2>
                            <p>{{ section.settings.header_ship1 }}</p>
                        </li>
                    </ul>
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header"> <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button> </div>
                            <div class="modal-body p-5 row" style="display: flex; justify-content: center;">
                                <div class="details col-12 col-lg-7">
                                    <h2>STAY TUNED</h2>
                                    <p><small class="para">Subscribe to our newsletter and never miss our<br> designs ,latest news.etc.</small></p>
                                    <p><small class="para">Our newsletter is sent once a week, every<br>Monday</small></p>
                                    <div class="form-group mt-3 pt-3 mb-5">
                                        {% form 'customer' %}
                                            
                                            <div class="email">
                                                <div class="form-group">
                                                    <label for="email">Email address</label>
                                                    <input type="email" class="form-control" name="contact[email]">
                                                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                                </div>
                                            </div>

                                            <div class="phone">
                                                <div class="form-group">
                                                    <label for="phone">Phone</label>
                                                    <input type="tel" class="form-control" name="contact[phone]">
                                                </div>
                                            </div>

                                            <div class="submit">
                                                <input type="submit" class="btn btn-primary" type="submit" value="Sign up" />
                                            </div>
                                        {% endform %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

