<div class="product-tab-item">
  <div class="pro-tab tabs">
    <h2 class="heading text-center"><span>{{ section.settings.m_title }}</span></h2>
    <ul class="list-inline nav nav-pills text-center">       
      {%- for block in section.blocks -%}
        <li class="nav-item {% if forloop.first %}active{% endif %}">
          <a class="nav-link" href="#wbprodtab1-{{block.id}}">
              <span>{{ block.settings.cat_name }}</span>
          </a>
        </li>
      {%- endfor -%}
    </ul>
  </div>
  <div class="clearfix"></div>
  <div class="tab-content tab-pro" style="padding-bottom: 30px; margin-bottom: 10px;">
      {%- for block in section.blocks -%}
      {%- assign collection = collections[block.settings.collection]  -%}
          <div class="tab-pane fade {% if forloop.first %}show active{% endif %}" id="wbprodtab1-{{block.id}}">
              <div class="rless">
                  <div class="owl-toppro">
                      {% for product in collection.products limit : 11 %}
                            <div class="grid__item col-12 cless list-unstyled">
                            {% render 'product-card-banner',
                            product_card_product: product,
                            block_id: block.id,
                            media_size: section.settings.image_ratio,
                            show_secondary_image: true,
                            show_rating: section.settings.show_rating,
                            picker_type: section.settings.picker_type,
                            show_variants: false,
                            show_colorswatch: section.settings.show_colorswatch,
                            display_product_type: section.settings.display_product_type  %}
                            </div>
                      {% else %}
                          {%- for i in (1..6) -%}
                              <div class="twopro grid__item col-12 cless">
                                  {% render 'product-card-placeholder' %}
                              </div>
                        {%- endfor -%}
                      {% endfor %} 
                      <div class="grid__item col-12 cless list-unstyled" style="display: flex; justify-content: center;">
                        <button id="qvbutton" type="button" onclick="location.href='collections/{{ block.settings.collection }}';" class="card-wrapper wbproduct-container btn btn-outline-warning shadow-sm p-3 mb-5 rounded" style="color: white; background-color: black; height: 308px; width: 216px">
                          <strong>View all</strong>
                          <h5>
                            <span>{{ block.settings.cat_name }} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                        </svg></span>
                          </h5>
                        </button>
                      </div>
                  </div>
              </div>
          </div>
      {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Top Product",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
        "type": "text",
        "id": "m_title",
        "label": "Heading",
        "default": "Our product"
    },
    {
      "type": "range",
      "id": "rows",
      "label": "Rows",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 1
    },
    {
      "type": "header",
      "content": "t:sections.featured-collection.settings.header.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.featured-collection.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.featured-collection.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.featured-collection.settings.image_ratio.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.featured-collection.settings.image_ratio.label"
    },
    {
        "type": "checkbox",
        "id": "display_product_type",
        "label": "Show Product Type?",
        "default": true
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_rating.label",
      "info": "t:sections.featured-collection.settings.show_rating.info"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_vendor.label"
    },
    {
      "type": "header",
      "content": "Variants"
    },    
    {
      "type": "checkbox",
      "id": "show_variants",
      "default": false,
      "label": "Show color/size variants"
    },
    {
      "type": "select",
      "id": "picker_type",
      "options": [
        {
          "value": "dropdown",
          "label": "t:sections.main-product.blocks.variant_picker.settings.picker_type.options__1.label"
        },
        {
          "value": "button",
          "label": "t:sections.main-product.blocks.variant_picker.settings.picker_type.options__2.label"
        }
      ],
      "default": "button",
      "label": "t:sections.main-product.blocks.variant_picker.settings.picker_type.label"
    },
    {
        "type": "checkbox",
        "id": "show_colorswatch",
        "default": true,
        "label": "Enable color swatches",
        "info": "Type set to be 'Pills'. [Learn how to setup swatches](https://www.webibazaar.com/shopify/viola-doc/home#colorswatch)"
    }
  ],
  "blocks": [
        {
        "type": "collection",
        "name": "Collection",
        "settings": [
            {
                "id": "cat_name",
                "type": "text",
                "label": "Tab name"
            },
            {
                "type": "collection",
                "id": "collection",
                "label": "t:sections.featured-collection.settings.collection.label"
            }
        ]
        }
    ],
  "presets": [
    {
        "name": "Top Product",
        "category": "Collection"
    }
  ]
}
{% endschema %}